Answers =['auckland','pink','malgossia','gold','buckchucket'] 
qustion =["where was the minecraft movie filmed?",
"what colour are the sheep in steves world?", # i made two list to make the qustion makeing easier 
"who is the main villian of the minecraft movie?",
"why do the piglins what to invade the overworld?",
"what custom weopon did jason mamoa create?"]

def run_quiz(questions):
    score = 0
    for question, answer in questions.items():
        user_answer = input(f"{question} ")#checks if you got the qustion correct
        if user_answer.lower() == answer.lower():
            print("Correct!")
            score += 1 # to give you a point if you are correct
        else:
            print(f"Incorrect. The correct answer is {answer}.")
    print(f"You scored {score} out of {len(questions)}.")# displays how many qustion you got right

questions = {
    qustion[0]: Answers[0],# i use lists to make this part cleaner
    qustion[1]: Answers[1],
    qustion[2]: Answers[2],
    qustion[3]: Answers[3],
    qustion[4]: Answers[4],
}

run_quiz(questions)
